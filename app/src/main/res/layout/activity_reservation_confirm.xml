<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="woowacourse.movie.util.DateTimeFormatters" />

        <import type="woowacourse.movie.util.DecimalFormatters" />

        <variable
            name="tickets"
            type="woowacourse.movie.model.TicketsState" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.confirm.ReservationConfirmActivity">

        <TextView
            android:id="@+id/empty_top"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@color/soft_purple"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cancel_description"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@color/soft_purple"
            android:gravity="center"
            android:text="@string/guide_reservation_cancel_condition"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/empty_top" />

        <TextView
            android:id="@+id/reservation_title"
            android:layout_width="332dp"
            android:layout_height="43dp"
            android:layout_marginTop="31dp"
            android:gravity="center"
            android:text="@{tickets.movie.title}"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cancel_description"
            tools:text="영화 제목" />

        <TextView
            android:id="@+id/reservation_date"
            android:layout_width="332dp"
            android:layout_height="38dp"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:text="@{DateTimeFormatters.INSTANCE.convertToDateTime(tickets.dateTime)}"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reservation_title"
            tools:text="상영 날짜" />


        <TextView
            android:id="@+id/reservation_count_and_seat"
            reservationCountAndSeats="@{tickets}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="69dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reservation_date"
            tools:text="일반 1명 | B2,D3 | 극장 이름" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reservation_count_and_seat">

            <TextView
                android:id="@+id/reservation_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@{DecimalFormatters.INSTANCE.convertToMoneyFormat(tickets.totalDiscountedMoneyState)}"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/reservation_money_text"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="13,000" />

            <TextView
                android:id="@+id/reservation_money_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/reservation_pay_text"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/reservation_money" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>